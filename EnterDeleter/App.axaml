<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="EnterDeleter.App"
             xmlns:local="using:EnterDeleter"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
		<FluentTheme>
			<FluentTheme.Palettes>
				 <!--Palette for Light theme variant--> 
				<ColorPaletteResources x:Key="Light" Accent="Blue" RegionColor="White" ErrorText="Red"/>
				 <!--Palette for Dark theme variant--> 
				<ColorPaletteResources x:Key="Dark" Accent="Aquamarine" RegionColor="#292929" ErrorText="Red"/>
			</FluentTheme.Palettes>
		</FluentTheme>
		<StyleInclude Source="avares://EnterDeleter/Styles.axaml"></StyleInclude>
    </Application.Styles>
</Application>